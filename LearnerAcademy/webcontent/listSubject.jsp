              <div>
             <div class="container-xl">
				<div class="table-responsive">
					<div class="table-wrapper">
						<div class="table-title">
							<div class="row">
								<div class="col-sm-6">
									<h2>Manage <b>Subject</b></h2>
								</div>
								<div class="col-sm-6">
									<a href="addNewSubject" style="font-size:20px;" class="btn btn-success" data-toggle="modal"><i  class="material-icons"></i> <span>Add Subject</span></a>
								</div>
							</div>
						</div>
						<table id="listSubject" class="table table-striped table-hover">
							<thead>
								<tr>
									<th>Subject Code</th>
									<th>Subject Name</th>
									<th>Class Name</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
							<c:forEach var="subjectMaster" items="${listSubject}">
							<tr>
									<td><c:out value="${subjectMaster.ccode}" /></td>
									<td><c:out value="${subjectMaster.scode}" /></td>
									<td><c:out value="${subjectMaster.sName}" /></td>
									<td>
				                       <a href="editSubject?id=<c:out value='${subjectMaster.id}' />" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
										<a href="deleteSubject?id=<c:out value='${subjectMaster.id}' />" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
				                    </td>
				                </tr>
				           </c:forEach>     
